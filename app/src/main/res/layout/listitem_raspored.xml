<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/txt_professor"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/txt_subject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/txt_classroom"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/txt_professor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/txt_groups"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/txt_classroom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:id="@+id/txt_day"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/txt_time"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/txt_day"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>